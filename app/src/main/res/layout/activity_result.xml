<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.Result.ResultActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blue_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- ScrollView for content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="60dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image -->
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="173dp"
                android:scaleType="centerCrop"
                android:src="@drawable/penyakit" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/typedisease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/typedisease"
                    android:textColor="@color/blue_primary"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_regular" />

                <TextView
                    android:id="@+id/disease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/disease"
                    android:textColor="@color/blue_primary"
                    android:textSize="24sp"
                    android:fontFamily="@font/inter_bold" />
            </LinearLayout>

            <!-- Deskripsi penyakit -->
            <TextView
                android:id="@+id/descriptiontittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/descriptiondiseasesection"
                android:textSize="20sp"
                android:fontFamily="@font/inter_bold" />

            <TextView
                android:id="@+id/descriptiondisease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/descriptiondisease"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular"/>

            <!-- Faktor penyebab -->
            <TextView
                android:id="@+id/factortittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/factortittle"
                android:textSize="20sp"
                android:fontFamily="@font/inter_bold" />

            <TextView
                android:id="@+id/factordesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/factordesc" />

            <!-- Pengobatan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/treatment"
                android:textSize="20sp"
                android:fontFamily="@font/inter_bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/treatmentdetail" />

            <!-- Artikel Terkait -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textSize="24sp"
                android:text="@string/recomendationArticle"
                android:fontFamily="@font/inter_bold"/>

            <!-- Artikel Terkait List -->
            <!-- Tambahkan item artikel terkait di sini -->
            <!-- Contoh artikel terkait 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/pictArticle"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/penyakit" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_title_article"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:fontFamily="@font/inter_bold"
                        android:text="@string/tittleArticle" />
                    <TextView
                        android:id="@id/dateArticle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dateArticle"
                        android:textSize="12sp"
                        android:fontFamily="@font/inter_regular"
                </LinearLayout>

            </LinearLayout>


            <!-- Contoh artikel terkait 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/pictArticle"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/penyakit" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_title_article"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:fontFamily="@font/inter_bold"
                        android:text="@string/tittleArticle" />
                    <TextView
                        android:id="@id/dateArticle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dateArticle"
                        android:textSize="12sp"
                        android:fontFamily="@font/inter_regular"
                </LinearLayout>


            </LinearLayout>

            <!-- Rumah Sakit Sekitar Anda -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textSize="24sp"
                android:text="@string/HospitalSection"
                android:textStyle="bold" />

            <!-- Rumah Sakit List -->
            <!-- Tambahkan item rumah sakit di sini -->
            <!-- Contoh rumah sakit 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/illustration_hospital" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="RS UNAIR\nJl. Dharmasraya\nRating: 4.5"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Contoh rumah sakit 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/illustration_hospital" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="RS Premier\nJl. Nginden Intan Barat\nRating: 4.5"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
